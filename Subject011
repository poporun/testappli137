package my.android.testappli137;

public class Subject011 {
  private String textdata[][] = {
		{
		"091029",
			"次のCSMA/CD方式の各機能を実行順に正しく並べ替えたものはどれか。",
			" ",
			"①キャリア検出 ②衝突検出 ③多重アクセス",
			" ",
			" ]①-②-③",
			"*]①-③-②",
			" ]②-③-①",
			" ]②-①-③",
		},
		{
			"100712",
			"CSMA/CDの動作の説明として正しいものは次のどれですか。",
			" ",
			"*]ホストはケーブル上に信号が流れていない場合のみ、データの送信を開始する。",
			" ]ホストはケーブル上に信号が流れているかどうかに関係なく、データの送信を開始する。",
			" ]一定の待ち時間が経過した送信者はフレームの送信を開始する。",
			" ]ランダムな待ち時間が経過すると、コリジョン発生前に送信していたホストは優先的にフレームの送信を開始することができる。",
			"*]コリジョンを検知したすべてのホストは、バックオフアルゴリズムによってランダムな時間だけ待機し、その時間が経過するとすべてのホストが同等にフレームの送信を開始することができる。",
			" ]ホストはケーブル上に信号が流れていないか確認したあとにデータ送信を開始するため、コリジョンが発生しなくなる。",
		}
	};

	int Qtotal() {
		return textdata.length;
	}

	String Text(int qno, int line) {
		return textdata[qno][line];
	}

	int Qlength(int qno) {
		return textdata[qno].length;
	}

	String Qdate(int qno) {
		return textdata[qno][0];
	}
}
